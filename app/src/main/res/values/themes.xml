<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LabDam2022" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_400</item>
        <item name="colorPrimaryVariant">@color/red_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorTertiary">@color/light_grey</item>

    </style>

    <style name="AppName">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="Title" parent="@style/Theme.LabDam2022">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mid</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Subtitle" parent="@style/Theme.LabDam2022">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="DefaultTextView" parent="@style/Theme.LabDam2022">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultEditText" parent="@style/Theme.LabDam2022">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultCheckBox" parent="@style/Theme.LabDam2022">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultSpinner" parent="@style/Theme.LabDam2022">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Theme.LabDam2022">
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
    </style>

    <style name="OverflowButton" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="DefaultButton" parent="Widget.Material3.Button.TextButton">
        <item name="colorPrimary">@android:color/background_light</item>
        <item name="colorOnPrimary">@color/red_600</item>
    </style>

    <style name="InverseButton" parent="Widget.Material3.Button.TextButton">
        <item name="colorPrimary">@color/red_400</item>
        <item name="colorOnPrimary">@android:color/background_light</item>
    </style>

    <style name="RowTitle" parent="Theme.LabDam2022">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:lines">1</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RowDescription" parent="Theme.LabDam2022">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RowPrice" parent="Theme.LabDam2022">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red_400</item>
    </style>

    <style name="RowPriceDescription" parent="Theme.LabDam2022">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="FavouriteCheckbox" parent="Theme.LabDam2022">
        <item name="colorSecondary">@color/red_400</item>
    </style>

    <style name="PriceTextView" parent="Theme.LabDam2022">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/red_400</item>
    </style>

    <style name="IconOnText" parent="Theme.LabDam2022">
        <item name="android:tint">@color/grey</item>
    </style>
</resources>